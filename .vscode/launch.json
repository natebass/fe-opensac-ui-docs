    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug default",
            "type": "debugpy",
            "request": "launch",
            "program": "/home/nwb/.cargo/bin/uv",
            "args": [
                "run",
                "python",
                "opensacui/main.py",
                "hello"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "debug pick args",
            "type": "debugpy",
            "request": "launch",
            "program": "/home/nwb/.cargo/bin/uv",
            "args": [
                "run",
                "python",
                "opensacui/main.py",
                "${command:pickArgs}"
            ],
            "console": "integratedTerminal",
        },
        {
            "name": "current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debuggy",
            "type": "debugpy",
            "request": "launch",
            "program": "uv",
            "args": [
                "run",
                "fastapi",
                "dev",
                "src/main.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
        }
    ]
}